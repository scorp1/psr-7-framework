{
  "config": {
    "sort-packages": true
  },
  "require": {
    "php": ">=7.1.0",
    "roave/security-advisories": "dev-master",
    "zendframework/zend-diactoros": "^2.1"
  },
  "autoload": {
    "psr-4": {
      "Framework\\": "src/Framework/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^8.1"
  },
  "scripts": {
    "serve": "php -S 0.0.0.0:8080 -t public/index.php",
    "test": "phpunit --colors=always",
    "logs": "cat /var/log/nginx/error.log"
  }
}
